<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <filter>
        <filter-name>checkLogin</filter-name>
        <filter-class>filter.checkLogin</filter-class>
    </filter>
    <filter>
        <filter-name>checkAdmin</filter-name>
        <filter-class>filter.checkAdmin</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>checkAdmin</filter-name>
        <url-pattern>/managerbook</url-pattern>
        <!--<url-pattern>/allorder</url-pattern>-->
    </filter-mapping>
    <filter-mapping>
        <filter-name>checkLogin</filter-name>
        <url-pattern>/addtocart</url-pattern>
<!--        <url-pattern>/process</url-pattern>
        <url-pattern>/managerbook</url-pattern>
        <url-pattern>/loadBook</url-pattern>
        <url-pattern>/Cart.jsp</url-pattern>
        <url-pattern>/allorder</url-pattern>
        <url-pattern>/yourorder</url-pattern>
        <url-pattern>/orderdetail</url-pattern>-->
    </filter-mapping>
    <servlet>
        <servlet-name>AddToCartControl</servlet-name>
        <servlet-class>controller.AddToCartControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartProcessControl</servlet-name>
        <servlet-class>controller.CartProcessControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckOutControl</servlet-name>
        <servlet-class>controller.CheckOutControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewOrderControl</servlet-name>
        <servlet-class>controller.ViewOrderControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderDetailControl</servlet-name>
        <servlet-class>controller.OrderDetailControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>YourOrderControl</servlet-name>
        <servlet-class>controller.YourOrderControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddToCartControl</servlet-name>
        <url-pattern>/addtocart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartProcessControl</servlet-name>
        <url-pattern>/process</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckOutControl</servlet-name>
        <url-pattern>/checkout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewOrderControl</servlet-name>
        <url-pattern>/allorder</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrderDetailControl</servlet-name>
        <url-pattern>/orderdetail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>YourOrderControl</servlet-name>
        <url-pattern>/yourorder</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>
            home
        </welcome-file>
    </welcome-file-list>
</web-app>
